<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="HatMakeableBase">
    <defName>Apparel_GasMask</defName>
    <label>gas mask</label>
    <description>A gas mask used to lessen the effect of toxic fallout. It restricts the field of view and makes aming difficult.</description>
    <recipeMaker>
      <researchPrerequisite>Electricity</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>TableMachining</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Gasmask/Gasmask</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costList>
      <ComponentIndustrial>1</ComponentIndustrial>
      <Steel>10</Steel>
      <Cloth>25</Cloth>
    </costList>
    <statBases>
      <WorkToMake>6000</WorkToMake>
      <Mass>0.1</Mass>
      <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.1</ArmorRating_Sharp>
      <Insulation_Heat>-2</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <ToxicSensitivity>-0.5</ToxicSensitivity>
      <MoveSpeed>-0.02</MoveSpeed>
      <ShootingAccuracyPawn>-0.1</ShootingAccuracyPawn>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Eyes</li>
        <li>Teeth</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Gasmask/Gasmask</wornGraphicPath>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Outlander</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  <ThingDef ParentName="HatMakeableBase">
    <defName>Apparel_FilterCloth</defName>
    <label>filter cloth</label>
    <description>A simple fine woven piece of cloth to lessen the effect of toxic fallout.</description>
    <recipeMaker>
      <researchPrerequisite />
      <recipeUsers>
        <li>ElectricTailoringBench</li>
        <li>HandTailoringBench</li>
        <li>CraftingSpot</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Veil/Veil</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>1000</WorkToMake>
      <Mass>0.07</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Heat>-2</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <ToxicSensitivity>-0.35</ToxicSensitivity>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Teeth</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Veil/Veil</wornGraphicPath>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Outlander</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.33,0.33,0.33,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.65,0.65,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>RGBA(0.3,0.3,0.3,1)</min>
          <max>RGBA(0.5,0.5,0.5,1)</max>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(0.9,0.9,0.9,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
